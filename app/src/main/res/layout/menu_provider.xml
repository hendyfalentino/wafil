<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="Wafil.basBangunan.PROVIDER.MenuProvider">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Menu"
        android:background="@color/kuning"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pesan"
        android:text="Pesan"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/riwayat_order"
        android:text="Riwayat Order"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/pendapatan"
        android:text="Pendapatan"
        android:textColor="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/profil"
        android:text="Profil"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"/>



</LinearLayout>