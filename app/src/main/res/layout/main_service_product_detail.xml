<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/main_service_product_dashboard_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_hair_styling"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp">

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/main_service_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.5"
                    android:text="Nama Produk"
                    android:fontFamily="@font/productsansbold"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    />

                <TextView
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/main_service_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.000 koin"
                    android:fontFamily="@font/productsansbold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:textSize="15sp"
                    android:fontFamily="@font/productsansbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="Deskripsi"/>

                <TextView
                    android:id="@+id/main_service_product_desc"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/productsansbold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:text="Lorem ipsum dolor \nsit amet consecteur "/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:alpha="0.5"
                android:background="@color/gray"/>

            <!-- REVIEW PAYMENT -->
            <LinearLayout
                android:id="@+id/menu_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- DATE BOOKING -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Product_ChooseDate"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">

                    <ImageView
                        android:id="@+id/Product_DateImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_access_time_black_24dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/Product_DateImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu Pemesanan"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/productsansbold"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/text_deliver_to_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih tanggal pemesanan"
                            android:textSize="13sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/productsansbold"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- PLACE BOOKING -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Product_ChooseLocation"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">

                    <ImageView
                        android:id="@+id/Product_PlaceImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_map_black_24dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/Product_PlaceImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Pemesanan"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/productsansbold"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/text_deliver_to_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih lokasi pemesanan"
                            android:textSize="13sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/productsansbold"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:alpha="0.5"
                android:background="@color/gray"/>

            <EditText
                android:id="@+id/main_service_product_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="15dp"
                android:hint="Tinggalkan catatan bagi vendor..."
                android:fontFamily="@font/productsansregular"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp">

                <ImageView
                    android:id="@+id/min_qty"
                    app:layout_constraintRight_toLeftOf="@id/main_service_product_qty"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_keyboard_arrow_down_24dp"
                    android:background="@drawable/shape_rounded_outline_black"/>

                <TextView
                    android:id="@+id/main_service_product_qty"
                    android:textSize="26sp"
                    android:fontFamily="@font/productsansbold"
                    android:textColor="@color/black"
                    android:text="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/add_qty"
                    app:layout_constraintLeft_toRightOf="@id/main_service_product_qty"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_keyboard_arrow_up_24dp"
                    android:background="@drawable/shape_rounded_outline_black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <!-- back button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_thin_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <!-- button add to cart -->
    <Button
        android:id="@+id/main_service_product_add_to_cart"
        android:text="Tambahkan - 20.000 koin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="@font/productsansbold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>