<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wafil.babySitter.AdminuserActivity"
    android:background="@color/pink">

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="217dp"
        android:layout_height="187dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textViewNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewUser"
        android:layout_marginTop="20dp"
        android:text="Nama"
        android:layout_marginLeft="10dp"
        android:textColor="@color/brown"/>

    <TextView
        android:id="@+id/textViewEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNameUser"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Email"
        android:textColor="@color/brown"/>

    <TextView
        android:id="@+id/textViewAddressUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmailUser"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="address"
        android:textColor="@color/brown"/>

    <TextView
        android:id="@+id/textViewPhoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAddressUser"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="phone number"
        android:textColor="@color/brown"/>

    <TextView
        android:id="@+id/textViewGenderUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPhoneUser"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Gender"
        android:textColor="@color/brown"/>

    <TextView
        android:id="@+id/textViewPasswordUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGenderUser"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Gender"
        android:textColor="@color/brown"/>

</RelativeLayout>