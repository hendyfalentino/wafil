<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wafil.atorJo.bersihRumah">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="60dp">

            <RadioButton
                android:id="@+id/radio_dengan_alat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dengan Alat"/>

            <RadioButton
                android:id="@+id/radio_tanpa_alat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanpa Alat"/>

    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGrup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/radioGroup"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="60dp">

        <RadioButton
            android:id="@+id/radio_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individual" />

        <RadioButton
            android:id="@+id/radio_grup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grup"/>

    </RadioGroup>

    <Button
        android:id="@+id/button_lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:text="Lanjut" />

