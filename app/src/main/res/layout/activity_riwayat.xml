<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".Wafil.babySitter.RiwayatActivity">

    <Button
        android:onClick="Backhome"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/backward_arrow" />

    <LinearLayout
        android:onClick="Feedback"
        android:layout_width="395dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/kotak"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="63dp"
            android:background="@drawable/bbystr" />

        <TextView
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:text="Babysitter Zendaya menjaga anak anda pada    Tanggal 21-04-2020" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:layout_width="422dp"
        android:layout_height="54dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/navigationbar"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button3"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/feednon"
            android:onClick="Home" />

        <Button
            android:id="@+id/button4"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/messages"
            android:onClick="Ongoing" />

        <Button
            android:id="@+id/button5"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/timeon"
            android:onClick="History" />

        <Button
            android:id="@+id/button6"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/profile"
            android:onClick="Profile" />
    </LinearLayout>

</RelativeLayout>