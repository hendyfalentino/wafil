<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Wafil.basBangunan.memesan_Jasa.Pesan_Jasa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#ffde59"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Jenis Masalah:"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/jenis_masalah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:textColor="#E8000000"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#ffde59"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Masukan lokasi anda:" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtext_lokasi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:inputType="text"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_place_black_24dp" />
        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Keterangan Lokasi:" />

            <EditText
                android:id="@+id/edt_keterangan_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:keepScreenOn="true"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#ffde59"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Foto Kerusakan" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tampil_foto_kerusakan"
                android:layout_width="300dp"
                android:layout_height="200dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:id="@+id/tambah_foto_kerusakan"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_add_a_photo_black_24dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#ffde59"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Keterangan Kerusakan" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_keterangan_kerusakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_broken_image_black_24dp"
                android:hint="masukan keterangan anda"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:keepScreenOn="true"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

  <Button
      android:layout_width="match_parent"
      android:id="@+id/btn_selanjutnya"
      android:layout_height="50dp"
      android:layout_marginTop="30dp"
      android:text="Selanjutnya"/>


</LinearLayout>
    </ScrollView>

</LinearLayout>