<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/atorjo_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Wafil.chilyoHouze.activity_chilyo_main">

        <!-- top navigation -->
        <LinearLayout
            android:id="@+id/activity_chilyo_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#FFFFFF"
            android:elevation="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/activity_atorjo_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_thin_left"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <ImageView
                    android:id="@+id/activity_chilyo_history"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_to_do"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/activity_chilyo_cart"
                    />

                <ImageView
                    android:id="@+id/activity_chilyo_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shopping_bag"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- type of service -->
        <LinearLayout
            android:id="@+id/services_chooser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/activity_chilyo_header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansbold"
                android:text="Dirumah aja, tapi bisa perawatan?"
                android:textColor="#000"
                android:textSize="20sp" />

            <!-- layanan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layanan"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/productsansbold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siap-siap santai dengan kami :)"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:alpha="0.7"
                android:fontFamily="@font/productsansregular"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- tombol make up -->
                <LinearLayout
                    android:id="@+id/acitvity_chilyo_make_up_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintWidth_percent="0.25">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:src="@drawable/logo_bersih_rumah" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Make Up"
                        android:textAlignment="center"
                        android:fontFamily="@font/productsansbold"
                        android:textSize="13sp"
                        android:layout_marginTop="7dp"
                        android:textColor="#000"/>

                </LinearLayout>

                <!-- tombol self nails -->
                <LinearLayout
                    android:id="@+id/acitvity_chilyo_self_nail_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/acitvity_chilyo_make_up_button"
                    app:layout_constraintWidth_percent="0.25">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:src="@drawable/logo_bersih_kantor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Self Nail"
                        android:textAlignment="center"
                        android:fontFamily="@font/productsansbold"
                        android:textSize="13sp"
                        android:layout_marginTop="7dp"
                        android:textColor="#000"/>

                </LinearLayout>

                <!-- tombol spa -->
                <LinearLayout
                    android:id="@+id/acitvity_chilyo_spa_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/acitvity_chilyo_self_nail_button"
                    app:layout_constraintWidth_percent="0.25">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:src="@drawable/logo_pengemas" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spa"
                        android:textAlignment="center"
                        android:fontFamily="@font/productsansbold"
                        android:textSize="13sp"
                        android:layout_marginTop="7dp"
                        android:textColor="#000"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

