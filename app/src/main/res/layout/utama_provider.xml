<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAB6B6"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="Wafil.basBangunan.PROVIDER.UtamaProvider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgview_menu"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="230dp"
            android:id="@+id/foto_profil"
            android:src="@drawable/ic_profil_foreground"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/switchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Switch"
                android:text="Text"
                android:textSize="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/texview_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:hint="Nama anda"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Riwayat Pesanan"
        android:textColor="@color/kuning"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/list_riwayat"/>

    <TextView
        android:id="@+id/jikateromaorder"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="JIKA TERIMA ORDERan MAKAN AKAN KESINI"/>

</LinearLayout>