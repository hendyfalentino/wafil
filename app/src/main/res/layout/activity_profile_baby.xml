<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".Wafil.babySitter.ProfileActivity">

    <Button
        android:id="@+id/btnbck"
        android:layout_width="30dp"
        android:onClick="Backhome"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/backward_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/prflpctr" />

        <TextView
            android:id="@+id/nameprf"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Gabriel"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="gabriel@gmail.com"
            android:textSize="15dp" />

        <TextView
            android:layout_width="183dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rectangle_1013"
            android:paddingTop="9dp"
            android:text="RP.50000"
            android:textAlignment="center"
            android:textColor="@color/brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:text="AKUN"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/forward_arrow_small"
            android:drawableRight="@drawable/forward_arrow_small"
            android:drawableBottom="@drawable/line_2"
            android:text="PESANAN"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/forward_arrow_small"
            android:drawableRight="@drawable/forward_arrow_small"
            android:drawableBottom="@drawable/line_2"
            android:text="PROMO"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/forward_arrow_small"
            android:drawableRight="@drawable/forward_arrow_small"
            android:drawableBottom="@drawable/line_2"
            android:text="BAHASA"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="INFO LAINNYA"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/forward_arrow_small"
            android:drawableRight="@drawable/forward_arrow_small"
            android:drawableBottom="@drawable/line_2"
            android:text="BANTUAN"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="422dp"
        android:layout_height="54dp"
        android:background="@drawable/navigationbar">


        <Button
            android:id="@+id/button3"
            android:onClick="Home"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/feednon" />

        <Button
            android:id="@+id/button4"
            android:onClick="Ongoing"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/messages" />

        <Button
            android:id="@+id/button5"
            android:onClick="History"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/time" />

        <Button
            android:id="@+id/button6"
            android:onClick="Profile"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/profileactv" />
    </LinearLayout>

</RelativeLayout>